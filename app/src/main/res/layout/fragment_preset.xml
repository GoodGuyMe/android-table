<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.presets.PresetsFragment">

    <RelativeLayout
        android:id="@+id/preset_holder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize"
        android:paddingStart="0dp"
        android:paddingTop="0dp"
        android:paddingEnd="0dp">
        <Button
            android:layout_width="@dimen/square_button_size"
            android:layout_height="@dimen/square_button_size"
            android:layout_marginStart="@dimen/button_side_margin"
            android:layout_marginTop="@dimen/button_top_margin"
            android:text="@string/add_preset"
            android:id="@+id/add_preset_button">

        </Button>

        <TextView
            android:id="@+id/text_presets"
            android:text="@string/color_presets"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/add_preset_button"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="@dimen/inner_slider_distance"
            android:layout_marginEnd="0dp"
            android:textAlignment="center"
            android:textSize="20sp" />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/inner_slider_distance"
            android:layout_marginStart="@dimen/button_side_margin"
            android:layout_marginEnd="@dimen/button_side_margin"
            android:columnCount="2"
            android:orientation="horizontal"
            android:layout_below="@+id/text_presets"
            android:id="@+id/preset_button_holder">

        </GridLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>