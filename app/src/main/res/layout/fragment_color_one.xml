<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="?attr/actionBarSize">


    <Button
        android:id="@+id/addColorButton"
        android:layout_width="173dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/button_side_margin"
        android:layout_marginTop="@dimen/button_top_margin"
        android:layout_marginEnd="@dimen/button_side_margin"
        android:text="@string/add_color" />

    <TextView
        android:id="@+id/text_color_presets"
        android:text="@string/color_presets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addColorButton"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="@dimen/inner_slider_distance"
        android:layout_marginEnd="0dp"
        android:textAlignment="center"
        android:textSize="20sp" />


</RelativeLayout>